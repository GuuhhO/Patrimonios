@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Resetar senha";
    Layout = "LoginLayout";
}

<h1>@ViewData["Title"]</h1>
<h2>Resete sua senha.</h2>
<hr />
<div class="row" style="width: 400px;">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="mb-4 col-md-12">
                <label asp-validation-for="Input.Email" class="form-label">E-mail</label>
                <input asp-for="Input.Email" class="form-control mb-2" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-4 col-md-12">
                <label asp-validation-for="Input.Password" class="form-label">Nova senha</label>
                <input asp-for="Input.Password" class="form-control mb-2" autocomplete="new-password" aria-required="true" placeholder="Nova senha" id="inputPassword1" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-4 col-md-12">
                <label asp-validation-for="Input.ConfirmPassword" class="form-label">Confirme sua nova senha</label>
                <div class="input-group mb-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Digite novamente senha" id="inputPassword2" />
                    <span class="input-group-text" style="background-color: #fff;"><i class="bi bi-eye" style="cursor: pointer; font-size:20px" id="showPasswordIcon"></i></span>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Resetar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<script src="~/js/showPasswordRegister.js"></script>