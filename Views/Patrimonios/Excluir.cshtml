@model Patrimonios.Models.PatrimoniosModel

@{
    ViewData["Title"] = "Excluir";
}

<div class="container">
    <div class="row text-center mt-2 mb-2">
        <h1>Deletar Patrimônio</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4>Tem certeza que deseja excluir este patrimônio?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Nº Patrimônio
                </dt>
                <dd class="col-sm-10">
                    @Model.NumeroPatrimonio
                </dd>
                <dt class="col-sm-2">
                    Descrição
                </dt>
                <dd class="col-sm-10">
                    @Model.Descricao
                </dd>
                <dt class="col-sm-2">
                    Localidade
                </dt>
                <dd class="col-sm-10">
                    @Model.Localidade
                </dd>
                <dt class="col-sm-2">
                    Valor
                </dt>
                <dd class="col-sm-10">
                    @Model.Valor
                </dd>
            </dl>
            <form asp-action="ExcluirConfirmado" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>