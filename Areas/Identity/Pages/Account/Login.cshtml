@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "LoginLayout";
}

<div class="d-flex justify-content-between align-items-center">
    <h1 class="pe-5">Patrimônios</h1>
    <img src="~/img/Logo_preta.png" style="width: 250px;" class="mb-4" />
</div>

<div class="row">
    <div class="col-md-12 m-auto">
        <section>
            <form id="account" method="post">
                @if (ViewData["MensagemHtml"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Html.Raw(ViewData["MensagemHtml"])
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                } else
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                }
                <div class="mb-4 col-md-12">
                    <label asp-for="Input.Email" class="form-label">E-mail</label>
                    <input asp-for="Input.Email" class="form-control mb-2" aria-required="true" placeholder="nome@exemplo.com" id="inputEmail" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-4 col-md-12">
                    <label asp-validation-for="Input.Password" class="form-label">Senha</label>
                    <div class="input-group mb-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Sua senha" id="inputPassword" />
                        <span class="input-group-text" style="background-color: #fff;"><i class="bi bi-eye" style="cursor: pointer; font-size:20px" id="showPasswordIcon"></i></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input me-2" asp-for="Input.RememberMe" />
                        Lembrar de mim
                    </label>
                    <button id="login-submit" type="submit" class="col-6 btn btn-primary">ENTRAR</button>
                </div>
                <div class="text-end">
                    <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="~/js/showPassword.js"></script>