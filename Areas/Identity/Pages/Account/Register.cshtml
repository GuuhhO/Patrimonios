@page
@model RegisterModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "LoginLayout";
}

<head>
    <style>
        body {
            overflow-y: auto
        }
        .wrapper {
            height: 100vh;
        }
    </style>
</head>

<div class="row mb-3">
    <center><img src="~/img/Logo_preta.png" width="200" class="mb-4" /></center>
    <h1 class="text-center">Patrimônios</h1>
</div>

<div class="row">
    <h2>Crie sua conta</h2>
    <div class="col-md-7">
        <section>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-4 col-md-12">
                    <label asp-for="Input.Email" class="form-label">E-mail</label>
                    <input asp-for="Input.Email" class="form-control mb-2" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" id="inputEmail" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-4 col-md-12">
                    <label asp-validation-for="Input.Password" class="form-label">Senha</label>
                    <input asp-for="Input.Password" class="form-control mb-2" autocomplete="new-password" aria-required="true" placeholder="Sua senha" id="inputPassword1" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-4 col-md-12">
                    <label asp-validation-for="Input.ConfirmPassword" class="form-label">Confirme sua senha</label>
                    <div class="input-group mb-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Digite novamente senha" id="inputPassword2" />
                        <span class="input-group-text" style="background-color: #fff;"><i class="bi bi-eye" style="cursor: pointer; font-size:20px" id="showPasswordIcon"></i></span>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary col-md-4 p-2">CADASTRAR</button>
                </div>
                <div class="mt-4">
                    <p class="mt-3">Se já tem uma conta, faça <a href="/">login</a>.</p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-5">
        <div class="mb-4 col-md-12">
            <dt class="col-sm-6">A senha deve conter:</dt>
            <dd class="col-12 text-danger">
                <p>- Pelo menos uma letra minúscula (a-z)</p>
                <p>- Pelo menos uma letra maiúscula (A-Z)</p>
                <p>- Pelo menos um número (0-9)</p>
                <p>- No mínimo 6 caracteres</p>
                <p>- Pode conter os seguintes caracteres especiais: $ # % &</p>
            </dd>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="~/js/showPasswordRegister.js"></script>