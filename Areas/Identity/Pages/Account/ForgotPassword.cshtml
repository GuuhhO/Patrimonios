@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
    Layout = "LoginLayout";
}

<h1>@ViewData["Title"]</h1>
<h2>Insira seu e-mail.</h2>
<hr />
<div class="row" style="min-width: 550px;">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 container-fluid">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                <label asp-for="Input.Email" class="form-label ms-2"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-lg btn-primary m-auto flex">RESETAR SENHA</button>
            </div>
            <p class="mt-3">Voltar para o <a href="/">início</a>.</p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
