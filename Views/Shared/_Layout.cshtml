<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patrimonios</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-dark.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.lineicons.com/5.0/lineicons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script type='text/javascript' src='//code.jquery.com/jquery-compat-git.js'></script>
    <script type='text/javascript' src='//igorescobar.github.io/jQuery-Mask-Plugin/js/jquery.mask.min.js'></script>

    <style>
        footer {
            display: flex;
            bottom: 0;
            width: 100%;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar border-bottom border-body">
            <div class="container-fluid">
                <div class="navbar-collapse show" id="navbarText" style="display: contents;">
                    <span class="navbar-text ms-5">
                        <img src="~/img/Logo_preta.png" width="100" id="logoMenu" />
                    </span>
                    <ul class="navbar-nav me-auto mb-lg-0">
                        <li class="nav-item" style="margin-left: 70px;">
                            <button id="toggle-btn" type="button">
                                <i class="bi bi-list-nested" id="botaoRecolher"></i>
                            </button>
                        </li>
                    </ul>
                    <span class="navbar-text me-5">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="lni lni-user-4"></i> Olá, @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-dropdown" style="cursor: pointer" id="toggleButton" value="Dark"><i class="bi bi-moon" id="toggleButtonIcon"></i> Alterar tema</a></li>
                                <li><a class="dropdown-item text-dropdown" style="cursor: pointer" href="/Identity/Account/Manage"><i class="bi bi-person-circle"></i> Conta</a></li>
                                <li><a class="dropdown-item text-dropdown" style="cursor: pointer" href="/Identity/Log"><i class="bi bi-pass-fill"></i> Log</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-dropdown" style="cursor: pointer" href="/Identity/Account/Logout"><i class="lni lni-exit"></i> Sair</a></li>
                            </ul>
                        </li>
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="wrapper">
        <aside id="sidebar" class="expand">
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a asp-controller="Home" asp-action="Index" class="sidebar-link">
                        <i class="lni lni-home-2"></i>
                        <span>Início</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="" class="sidebar-link has-dropdown collapsed" data-bs-toggle="collapse" data-bs-target="#patrimonios" aria-expanded="false" aria-controls="patrimonios">
                        <i class="lni lni-ticket-1"></i>
                        <span>Patrimônios</span>
                    </a>
                    <ul id="patrimonios" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item submenu">
                            <a asp-controller="Patrimonios" asp-action="Adicionar" class="sidebar-link">Adicionar</a>
                        </li>
                        <li class="sidebar-item submenu">
                            <a asp-controller="Patrimonios" asp-action="Index" class="sidebar-link" style="border-bottom: none!important;">Exibir todos</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Home" asp-action="Configuracoes" class="sidebar-link">
                        <i class="bi bi-sliders"></i>
                        <span>Configurações</span>
                    </a>
                </li>
            </ul>
        </aside>
        <div class="main">
            <div class="container pt-5 pb-5 containerPrincipal">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <footer class="footer text-muted">
                <div class="container text-center">
                    &copy; 2025 - Patrimonios
                </div>
            </footer>

        </div>
    </div>
    
    <script src="~/js/inverterCores.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js" ></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
